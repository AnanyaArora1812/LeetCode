class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        unordered_map<int, int> freq;
        freq[0] = 1;
        int total = 0, count = 0;

        for (int num : nums) {
            total += num;
            int rem = total % k;
            if (rem < 0) rem += k;
            count += freq[rem];
            freq[rem]++;
        }

        return count;
    }
};
