#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    bool carPooling(vector<vector<int>>& trips, int capacity) {
        vector<int> stops(1001, 0);  // locations range 0â€“1000

        for (auto &t : trips) {
            stops[t[1]] += t[0];  // pick up
            stops[t[2]] -= t[0];  // drop off
        }

        int passengers = 0;
        for (int i = 0; i <= 1000; i++) {
            passengers += stops[i];
            if (passengers > capacity)
                return false;
        }
        return true;
    }
};
