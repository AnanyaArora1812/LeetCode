#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    vector<int> findXSum(vector<int>& nums, int k, int x) {
        int n = nums.size();
        vector<int> ans;

        for (int i = 0; i + k <= n; i++) {
            unordered_map<int, int> freq;
            
            // Count frequency for subarray nums[i..i+k-1]
            for (int j = i; j < i + k; j++) 
                freq[nums[j]]++;

            // Store {frequency, value} pairs
            vector<pair<int, int>> v;
            for (auto &p : freq)
                v.push_back({p.second, p.first});

            // Sort by frequency desc, then value desc
            sort(v.begin(), v.end(), [](auto &a, auto &b) {
                if (a.first == b.first) return a.second > b.second;
                return a.first > b.first;
            });

            // Take top x elements
            unordered_set<int> topx;
            for (int j = 0; j < min(x, (int)v.size()); j++)
                topx.insert(v[j].second);

            // Compute x-sum
            int sum = 0;
            for (int j = i; j < i + k; j++)
                if (topx.count(nums[j])) sum += nums[j];

            ans.push_back(sum);
        }

        return ans;
    }
};
